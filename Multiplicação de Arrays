import java.util.Scanner;

public class Arrays {
    public static void main(String[] args) {
        System.out.println("Insira os valores do primeiro array de 5 posições:");
        Scanner scan = new Scanner(System.in);

        int[] primeiroArray = new int[5];
        for (int i = 0; i < primeiroArray.length; i++){
            System.out.println("Valor " + i);
            primeiroArray[i] = scan.nextInt();
        }

        int[] segundoArray = new int[5];
        for (int i = 0; i < segundoArray.length; i++){
            System.out.println("Valor " + i);
            segundoArray[i] = primeiroArray[i] * 2;
        }

        System.out.println("Primeiro Array: ");
        for (int nota : primeiroArray) {
            System.out.println(nota);
        }
        System.out.println("Segundo Array: ");
        for (int nota : segundoArray) {
            System.out.println(nota);
        }

    }
}

