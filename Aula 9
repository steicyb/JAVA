//Exercise 1 - Média com If


package com.company;
import java.util.Scanner;

public class IfMedia {
    public static void main(String[] args){
        System.out.println("Insira as notas abaixo:");
        Scanner media = new Scanner(System.in);
        double a = media.nextDouble();
        double b = media.nextDouble();
        double c = media.nextDouble();
        double d = media.nextDouble();
        double mediaFinal = (a + b + c + d) / 4;
        System.out.println("A média é igual a: " + mediaFinal);

        if (mediaFinal == 10){
            System.out.println("Parabéns, nota máxima!!!");
        }
        else if (mediaFinal < 7){
            System.out.println("Aluno reprovado ;-;");
        }
        else if (mediaFinal >= 7){
            System.out.println("Aluno Aprovado XD");;
        }





    }
}



//Exercise 2 - Dias da Semana

package com.company;
import java.util.Scanner;


public class DiaDaSemana {
    public static void main(String[] args){
        System.out.println("Digite um número de 1 a 7 para descobrir o dia da Semana:");
        Scanner semana = new Scanner(System.in);
        int dia = semana.nextInt();

        if (dia == 1){
            System.out.println("Corresponde ao Domingo!");
        } else if  (dia == 2){
            System.out.println("Corresponde à Segunda-feira!");
        } else if (dia == 3){
            System.out.println("Corresponde à Terça-feira!");
        } else if (dia == 4){
            System.out.println("Corresponde à Quarta-feira!");
        } else if (dia == 5){
            System.out.println("Corresponde à Quinta-feira!");
        } else if (dia == 6){
            System.out.println("Corresponde à Sexta-feira!");
        } else if (dia == 7){
            System.out.println("Corresponde ao Sábado!");
        } else {
            System.out.println("Valor Inválido!");
        }



    }
}
