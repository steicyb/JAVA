package com.company;
import java.util.Scanner;

public class IfMedia {
    public static void main(String[] args){
        System.out.println("Insira as notas abaixo:");
        Scanner media = new Scanner(System.in);
        double a = media.nextDouble();
        double b = media.nextDouble();
        double c = media.nextDouble();
        double d = media.nextDouble();
        double mediaFinal = (a + b + c + d) / 4;
        System.out.println("A média é igual a: " + mediaFinal);

        if (mediaFinal == 10){
            System.out.println("Parabéns, nota máxima!!!");
        }
        else if (mediaFinal < 7){
            System.out.println("Aluno reprovado ;-;");
        }
        else if (mediaFinal >= 7){
            System.out.println("Aluno Aprovado XD");;
        }





    }
}
